<div class="row">
  <div class="columns small-12 panel">
    <h1><%= emojify(@post.subject) %></h1>
    <% if @post.blog_image %>
      <%= image_tag @post.blog_image_url %>
    <% end %>
    <p><%= emojify(@post.content) %></p>
    <%= link_to "Leave a comment", new_post_comment_path(@post) %>
    <% if is_nicole? %>
      | <%= link_to "Edit", edit_post_path(@post) %>
      | <%= link_to "Delete Post", post_path(@post), method: :delete %>
    <% end %>
    <% @post.comments.each do |c| %>
      <div class="callout panel">
        <p><%= emojify(c.content) %></p>
        - <%= c.user.email %>
        <% if current_user && c.user == current_user %>
          | <%= link_to "Edit Comment", edit_post_comment_path(@post, c) %>
          | <%= link_to "Delete Comment", post_comment_path(@post, c), method: :delete %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
