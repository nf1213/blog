<div class="row">
  <div class="columns small-12">
    <% @posts.each do |p| %>
      <div class="panel">
        <h3><%= link_to emojify(p.subject), post_path(p) %></h3>
        <% if p.blog_image %>
          <%= image_tag p.blog_image_url, class: "img" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
