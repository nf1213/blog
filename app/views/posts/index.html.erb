<div class="row">
  <div class="columns small-12">
    <% @posts.each do |p| %>
      <%= link_to post_path(p)  do %>
        <div class="panel">
          <h3><%= emojify(p.subject) %></h3>
          <% if p.blog_image %>
            <%= image_tag p.blog_image_url, class: "img" %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
